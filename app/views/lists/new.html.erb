<div class="container">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="bg-white rounded">
        <h3>Create a new list 🎞</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Comedy, Drama, Doku' %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
